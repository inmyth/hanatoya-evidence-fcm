<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="formElement">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/spacing_medium</item>
    </style>

    <style name="formTitle" parent="formElement">
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingLeft">@dimen/spacing_small</item>
    </style>

    <style name="formEditText" parent="formElement">
        <item name="android:layout_marginTop">@dimen/spacing_xlarge</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>
